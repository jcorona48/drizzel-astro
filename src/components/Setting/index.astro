---
import SwitchLang from "@/components/Lang/index.astro";
import SwitchTheme from "@/components/Theme/index.astro";
import { getLangFromUrl } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
---

<div class="flex gap-2 justify-end py-2 px-4 z-30" transition:name="setting">
    <SwitchLang lang={lang} />
    <SwitchTheme />
</div>
